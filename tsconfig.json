{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"],
      "@api": ["src/services/"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@config": ["src/utils/config"],
      "@models": ["src/models"],
      "@routes": ["src/routes"],
      "@services": ["src/services"],
      "@themes": ["src/themes"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "mock/**/*",
    "src/**/*",
    "config/**/*",
    ".umirc.ts",
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
